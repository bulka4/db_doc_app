<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/bootstrap.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script type="module" src="/scripts.js"></script>
</head>
<body>
    <!-- section with tables list -->
    <div class="list-group" style="width: 300px; height: 100vh; overflow: auto; display: inline-block">
        <% docs.forEach(doc => { %>
            <% if (doc.tableId == selected_doc.tableId) { %>
                <form action="/docs/search" method="POST" style="margin-bottom: 20px">
                    <div style="text-align: center;">
                        <label>Search Tables</label>
                        <input type="input" name="searchBar">
                        <button type="submit" name="tableId" value="<%= doc.tableId %>">Search</button>
                    </div>
                </form>
                <div class="list-group-item list-group-item-action active" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">
                    <a href="/docs/<%= doc.tableId %>/table" style="color: white">
                        <%= doc.tableName %>
                    </a>
                    <div style="text-overflow: ellipsis; overflow: hidden">
                        <%= doc.tableDescription %>
                    </div>
                </div>
            <% } else { %>
                <div class="list-group-item list-group-item-action" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">
                    <a href="/docs/<%= doc.tableId %>/table">
                        <%= doc.tableName %>
                    </a>
                    <div style="text-overflow: ellipsis; overflow: hidden">
                        <%= doc.tableDescription %>
                    </div>
                </div>
            <% } %>
        <% }) %>
    </div>

    <!-- section with a documentation -->
    <div style="display: inline-block; vertical-align: top; margin-top:20px; margin-left:20px">
        <header>
            <h1><%= selected_doc.tableName %></h1>
        </header>
        <div style="margin-top:20px">
            <a href="/docs/<%= selected_doc.tableId %>/table">Table</a>
            <a href="/docs/<%= selected_doc.tableId %>/columns">Columns</a>
        </div>
        <!-- documentation for tables -->
        <div style="margin-top:20px">
            <form action="/docs/<%= selected_doc.tableId %>/table?_method=PUT" method="POST">
                <span style="display: block">Table description:</span>
                    <textarea rows="30" cols="150" name="description"><%= selected_doc.tableDescription %></textarea>
                <button type="submit" class="btn btn-primary" style="vertical-align: top">Save</button>
            </form>
        </div>
    </div>
</body>
</html>