<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/bootstrap.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script type="module" src="/scripts.js"></script>
</head>
<body>
    <!-- section with tables list -->
    <div class="list-group" style="width: 300px; height: 100vh; overflow: auto; display: inline-block">
        <div style="text-align: center; margin: 20px">
            <label>Search Tables</label>
            <input type="input" id="searchBar" onkeyup="search(this)">
        </div>
        <% docs.forEach(doc => { %>
            <% if (doc.tableId == selected_doc.tableId) { %>
                <div class="list-group-item list-group-item-action active" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">
                    <a href="/docs/<%= doc.tableId %>/table" style="color: white">
                        <%= doc.tableName %>
                    </a>
                    <div style="text-overflow: ellipsis; overflow: hidden">
                        <%= doc.tableDescription %>
                    </div>
                </div>
            <% } else { %>
                <div class="list-group-item list-group-item-action" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">
                    <a href="/docs/<%= doc.tableId %>/table">
                        <%= doc.tableName %>
                    </a>
                    <div style="text-overflow: ellipsis; overflow: hidden">
                        <%= doc.tableDescription %>
                    </div>
                </div>
            <% } %>
        <% }) %>
    </div>

    <!-- section with a documentation -->
    <div style="display: inline-block; vertical-align: top; margin-top:20px; margin-left:20px">
        <header>
            <h1><%= selected_doc.tableName %></h1>
        </header>
        <div style="margin-top:20px">
            <a href="/docs/<%= selected_doc.tableId %>/table">Table</a>
            <a href="/docs/<%= selected_doc.tableId %>/columns">Columns</a>
        </div>
        <!-- documentation for columns -->
        <form action="/docs/<%= selected_doc.tableId %>/columns?_method=PUT" method="POST" style="margin-top:20px">
            <div style="display: inline-block">
                <table class="table table-bordered">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Column</th>
                        <th scope="col">Description</th>
                    </tr>
                    <% selected_doc.columns.forEach((column, index) => { %>
                        <tr>
                            <th scope="row"><%= index %></th>
                            <th scope="row">
                                <div name="column_name_<%= index %>"><%= column.columnName %></div>
                            </th>
                            <th scope="row">
                                <textarea rows="1" cols="150" name="column_description_<%= index %>"><%= column.columnDescription %></textarea>
                            </th>
                        </tr>
                    <% }) %>
                </table>
            </div>
            <button type="submit" class="btn btn-primary" style="vertical-align: top; display:inline-block">
                Save
            </button>
        </form>
    </div>
</body>
</html>